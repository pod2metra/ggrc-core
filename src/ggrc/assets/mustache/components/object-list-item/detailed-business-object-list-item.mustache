<div class="flex-size-1">
    <h6>Description</h6>
    <read-more text="itemData.description"></read-more>
</div>
<div class="flex-size-1">
    <h6>Notes</h6>
    <read-more text="itemData.notes"></read-more>
</div>
<div class="object-popover-attributes flex-box flex-row flex-box-multi">
    <div class="flex-size-1">
        <h6>Code</h6>
        <span>{{itemData.slug}}</span>
    </div>
    <div class="flex-size-1">
        <related-people-access-control
            {include-roles}="adminRole"
            {instance}="instance">
            <div class="people-groups">
                {{#groups}}
                    <related-people-access-control-group
                        {group-id}="groupId"
                        {title}="title"
                        {people}="people"
                        {instance}="instance"
                        class="people-group">
                            <deletable-people-group
                                {can-unmap}="deletableAdmin"
                                {is-loading}="isUpdating"
                                {group-id}="groupId"
                                {instance}="instance"
                                {people}="people">
                                    <h6>Admin</h6>
                            </deletable-people-group>
                    </related-people-access-control-group>
                {{/groups}}
            </div>
        </related-people-access-control>
    </div>
    {{#if customAttributes.length}}
        {{#each customAttributes}}
            <div class="flex-size-1">
                <h6>{{title}}</h6>
                <auto-save-form-field-view
                        {type}="type"
                        {value}="value"
                ></auto-save-form-field-view>
            </div>
        {{/each}}
    {{/if}}
</div>
