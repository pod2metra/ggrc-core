{{#switch type}}
  {{#case 'text'}}
    {{> '/static/mustache/components/inline/simple-readonly-text.mustache'}}
  {{/case}}

  {{#case 'input'}}
    {{> '/static/mustache/components/inline/simple-readonly-text.mustache'}}
  {{/case}}

  {{#case 'dropdown'}}
    {{> '/static/mustache/components/inline/simple-readonly-text.mustache'}}
  {{/case}}

  {{#case 'checkbox'}}
    <input disabled type="checkbox" can-value="context.value">
  {{/case}}

  {{#case 'date'}}
    <div class="inline-edit__text">
      {{#if context.value}}
        {{date context.value true}}
      {{else}}
        <span class="empty-message">None</span>
      {{/if}}
    </div>
  {{/case}}

  {{#case 'person'}}
    {{#if context.value}}
      <person-list-item {person-id}="context.value" {with-details}="withDetails"></person-list-item>
    {{else}}
      <span class="empty-message">No person</span>
    {{/if}}
  {{/case}}
{{/switch}}
