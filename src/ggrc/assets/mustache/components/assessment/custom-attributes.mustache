{{#each items}}
    <inline-edit-control class="info-pane__section"
        (inline-save)="updateGlobalAttribute(%event, %context)"
        {instance}="instance"
        {dropdown-options}="options"
        {dropdown-class}="dropdownClass"
        {dropdown-no-value}="dropdownNoValue"
        {edit-mode}="editMode"
        {is-allow-edit}="isAllowEdit"
        {is-loading}="isLoading"
        {value}="value"
        {type}="type"
        with-read-more="true">
              <confirm-inline-control-title
                  (set-edit-mode-inline)="setEditModeInline(%event)"
                  (set-in-progress)="setInProgressState()"
                  {instance}="instance"
                  {on-state-change-dfd}="onStateChangeDfd"
                  {edit-mode}="editMode">
                <div class="info-pane__section-title">{{title}}</div>
              </confirm-inline-control-title>
    </inline-edit-control>
{{/each}}
